{
	"name": "@nexus/core",
	"version": "0.1.0",
	"description": "Core framework for building admin panels and internal tools",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./kernel": {
			"types": "./dist/kernel/index.d.ts",
			"import": "./dist/kernel/index.js"
		},
		"./plugins": {
			"types": "./dist/plugins/index.d.ts",
			"import": "./dist/plugins/index.js"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"clean": "rm -rf dist",
		"prepublishOnly": "npm run clean && npm run build"
	},
	"keywords": [
		"admin",
		"dashboard",
		"framework",
		"typescript",
		"plugin-system",
		"dependency-injection"
	],
	"author": "Nexus Team",
	"license": "MIT",
	"dependencies": {
		"zod": "^4.1.5"
	},
	"devDependencies": {
		"typescript": "^5.0.0"
	},
	"engines": {
		"node": ">=18"
	}
}
