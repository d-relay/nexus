{
	"name": "@nexus/core",
	"version": "0.1.0",
	"description": "Database & Auth agnostic admin framework core",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "vitest",
		"lint": "eslint src --ext ts --report-unused-disable-directives --max-warnings 0",
		"format": "prettier --write \"src/**/*.ts\"",
		"format:check": "prettier --check \"src/**/*.ts\""
	},
	"files": [
		"dist"
	],
	"keywords": [
		"admin",
		"framework", 
		"typescript",
		"database-agnostic",
		"auth-agnostic"
	],
	"dependencies": {
		"zod": "^4.1.5",
		"drizzle-orm": "^0.40.0"
	},
	"peerDependencies": {
		"postgres": "^3.4.5"
	},
	"devDependencies": {
		"@types/node": "^22",
		"eslint": "^9.35.0",
		"prettier": "^3.6.2",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	},
	"engines": {
		"node": ">=20"
	}
}